<section id="portfolio" class="portfolio">
  <div class="portfolio-container">
    <div class="section-title">
      <h2>Nuestros Eventos</h2>
      <p>Explora algunos de los proyectos en los que hemos trabajado</p>
    </div>

    <div class="portfolio-grid">
      {
        portfolioEvents.map((event, index) => (
          <div
            class={`portfolio-item ${event.size}`}
            data-id={event.id}
            data-title={event.title}
            data-category={event.category}
            data-description={event.description}
          >
            <div class="portfolio-image">
              <img
                src={event.imageUrl}
                alt={event.title}
                loading={index < 6 ? "eager" : "lazy"}
                decoding="async"
                fetchpriority={index === 0 ? "high" : "auto"}
              />
              <div class="portfolio-overlay">
                <h3>{event.title}</h3>
                <span class="category">{event.category}</span>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Modal para ver la imagen ampliada -->
  <div
    id="portfolioModal"
    class="portfolio-modal"
    role="dialog"
    aria-modal="true"
    aria-labelledby="modalTitle"
  >
    <div class="modal-content">
      <button class="close-modal" aria-label="Cerrar modal">×</button>
      <div class="modal-image-container">
        <img id="modalImage" src="" alt="" loading="eager" decoding="async" />
      </div>
      <div class="modal-details">
        <h3 id="modalTitle"></h3>
        <p id="modalCategory"></p>
        <p id="modalDescription"></p>
      </div>
    </div>
  </div>
</section>

<style>
  .portfolio {
    background-color: var(--color-light);
    padding: 4rem 0;
  }

  .portfolio-container {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    grid-auto-flow: dense;
    gap: 8px;
    margin-top: 2rem;
    max-width: 100%;
  }

  .portfolio-item {
    position: relative;
    overflow: hidden;
    border-radius: 6px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    cursor: pointer;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    margin: 0;
  }

  .portfolio-item:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
    z-index: 2;
  }

  /* Tamaños para el layout tipo bento */
  .portfolio-item.small {
    grid-column: span 2;
    grid-row: span 2;
    height: 180px;
  }

  .portfolio-item.medium {
    grid-column: span 2;
    grid-row: span 3;
    height: 270px;
  }

  .portfolio-item.large {
    grid-column: span 4;
    grid-row: span 3;
    height: 270px;
  }

  .portfolio-image {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .portfolio-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .portfolio-item:hover .portfolio-image img {
    transform: scale(1.05);
  }

  .portfolio-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
    color: white;
    opacity: 0;
    transform: translateY(20px);
    transition:
      opacity 0.3s ease,
      transform 0.3s ease;
  }

  .portfolio-item:hover .portfolio-overlay {
    opacity: 1;
    transform: translateY(0);
  }

  .portfolio-overlay h3 {
    margin: 0 0 5px 0;
    font-size: 1.2rem;
  }

  .portfolio-overlay .category {
    font-size: 0.9rem;
    opacity: 0.8;
  }

  /* Modal styles */
  .portfolio-modal {
    display: none;
    position: fixed;
    z-index: 2000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    overflow: auto;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .portfolio-modal.active {
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 1;
  }

  .modal-content {
    position: relative;
    background-color: white;
    max-width: 900px;
    width: 90%;
    margin: auto;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 5px 30px rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: column;
    opacity: 0;
    transform: scale(0.9);
    transition:
      opacity 0.3s ease,
      transform 0.3s ease;
  }

  .portfolio-modal.active .modal-content {
    opacity: 1;
    transform: scale(1);
  }

  .close-modal {
    position: absolute;
    top: 10px;
    right: 15px;
    color: var(--color-dark);
    font-size: 30px;
    font-weight: bold;
    cursor: pointer;
    z-index: 10;
    transition: color 0.3s;
  }

  .close-modal:hover {
    color: var(--color-primary);
  }

  .modal-image-container {
    width: 100%;
    max-height: 70vh;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .modal-image-container img {
    max-width: 100%;
    max-height: 70vh;
    object-fit: contain;
  }

  .modal-details {
    padding: 20px;
  }

  .modal-details h3 {
    color: var(--color-primary);
    margin-bottom: 10px;
    font-size: 1.8rem;
  }

  .modal-details p {
    margin-bottom: 10px;
    line-height: 1.6;
  }

  #modalCategory {
    color: var(--color-secondary);
    font-weight: 500;
    font-size: 1.1rem;
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .portfolio-grid {
      grid-template-columns: repeat(4, 1fr);
    }

    .portfolio-item.large {
      grid-column: span 2;
    }
  }

  @media (max-width: 992px) {
    .portfolio-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .portfolio-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 6px;
    }

    .portfolio-item.large,
    .portfolio-item.medium,
    .portfolio-item.small {
      grid-column: span 1;
      grid-row: span 1;
      height: 200px;
    }
  }

  @media (max-width: 576px) {
    .portfolio-grid {
      grid-template-columns: repeat(1, 1fr);
    }

    .portfolio-item.large,
    .portfolio-item.medium,
    .portfolio-item.small {
      grid-column: span 1;
      height: 200px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Referencias DOM
    const portfolioItems =
      document.querySelectorAll<HTMLElement>(".portfolio-item");
    const modal = {
      container: document.getElementById("portfolioModal"),
      image: document.getElementById("modalImage") as HTMLImageElement,
      title: document.getElementById("modalTitle"),
      category: document.getElementById("modalCategory"),
      description: document.getElementById("modalDescription"),
      closeBtn: document.querySelector(".close-modal"),
    };

    // Función para abrir el modal
    function openModal(item: HTMLElement): void {
      if (
        !modal.container ||
        !modal.image ||
        !modal.title ||
        !modal.category ||
        !modal.description
      )
        return;

      const img = item.querySelector("img");
      if (!img) return;

      const imageUrl = img.getAttribute("src") || "";
      const title = item.dataset.title || "";
      const category = item.dataset.category || "";
      const description = item.dataset.description || "";

      console.log("Modal image URL:", imageUrl); // Para debugging

      modal.image.src = imageUrl;
      modal.image.alt = title;
      modal.title.textContent = title;
      modal.category.textContent = category;
      modal.description.textContent = description;

      modal.container.classList.add("active");
      document.body.style.overflow = "hidden";

      // Pre-cargar siguiente imagen
      const nextItem = item.nextElementSibling as HTMLElement;
      if (nextItem?.classList.contains("portfolio-item")) {
        const nextImg = nextItem.querySelector("img");
        if (nextImg) {
          const nextImageUrl = nextImg.getAttribute("src");
          if (nextImageUrl) {
            const img = new Image();
            img.src = nextImageUrl;
          }
        }
      }
    }

    // Función para cerrar el modal
    function closeModal(): void {
      if (!modal.container) return;
      modal.container.classList.remove("active");
      setTimeout(() => {
        document.body.style.overflow = "";
      }, 300);
    }

    // Event Listeners
    portfolioItems.forEach((item) => {
      item.addEventListener("click", () => openModal(item));
    });

    if (modal.closeBtn) {
      modal.closeBtn.addEventListener("click", closeModal);
    }

    if (modal.container) {
      modal.container.addEventListener("click", (e) => {
        if (e.target === modal.container) closeModal();
      });
    }

    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && modal.container?.classList.contains("active")) {
        closeModal();
      }
    });

    // Intersection Observer para lazy loading
    const imgObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (
            entry.isIntersecting &&
            entry.target instanceof HTMLImageElement
          ) {
            const img = entry.target;
            if (img.dataset.src) {
              img.src = img.dataset.src;
            }
            if (img.dataset.srcset) {
              img.srcset = img.dataset.srcset;
            }
            imgObserver.unobserve(img);
          }
        });
      },
      { rootMargin: "50px" }
    );

    // Observar imágenes que están más abajo en la página
    document
      .querySelectorAll<HTMLImageElement>(
        '.portfolio-image img[loading="lazy"]'
      )
      .forEach((img) => {
        imgObserver.observe(img);
      });
  });
</script>
