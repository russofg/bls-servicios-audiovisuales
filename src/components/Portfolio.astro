    // Función para abrir el modal con los datos del evento
    function openModal(eventId) {
      // Encontrar el evento por su ID
      const event = portfolioEvents.find((ev) => ev.id === eventId);

      if (event) {
        // Establecer los datos en el modal
        modalImage.src = event.imageUrl;
        modalImage.alt = event.title;
        modalTitle.textContent = event.title;
        modalCategory.textContent = event.category;
        modalDescription.textContent = event.description;

        // Mostrar el modal con animación
        modal.classList.add("active");
        document.body.style.overflow = "hidden"; // Prevenir scroll del body
      }
    }

    // Función para cerrar el modal
    function closeModalFunc() {
      modal.classList.remove("active");

      // Esperar a que termine la animación antes de ocultar completamente
      setTimeout(() => {
        document.body.style.overflow = ""; // Restaurar scroll
      }, 300);
    }

    // Añadir event listeners a los items del portfolio
    portfolioItems.forEach((item) => {
      item.addEventListener("click", () => {
        const eventId = item.getAttribute("data-id");
        openModal(eventId);
      });
    });

    // Event listener para cerrar modal
    closeModal.addEventListener("click", closeModalFunc);

    // Cerrar modal al hacer clic fuera del contenido
    window.addEventListener("click", (e) => {
      if (e.target === modal) {
        closeModalFunc();
      }
    });

    // Cerrar modal con tecla ESC
